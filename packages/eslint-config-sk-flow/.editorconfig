root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md,html}]
max_line_length = off
insert_final_newline = false
trim_trailing_whitespace = false

[*.min.*]
indent_style = ignore
insert_final_newline = ignore
trim_trailing_whitespace = false
