  "license": "MIT",
  "workspaces": ["packages/*"],
  "dependencies": {
    "lerna": "^2.9.0",
    "yalc": "^1.0.0-pre.17"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "link:update": "lerna exec yalc update",
    "link:publish": "lerna exec yalc publish",
    "link:modules": "lerna run link:modules && lerna exec yalc link eslint-config-sk-common",
    "link:start": "run-s link:publish link:modules",
    "format": "prettier './**/*.js' --write",
    "test": "lerna run test",
    "prepare": "lerna run prepare"
  },
  "devDependencies": {
    "eslint": "^4.18.2",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.11.1"
  }
}
